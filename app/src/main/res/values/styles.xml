<resources>


    <style name="AppTheme" parent="HKWY.Light">
        <item name="android:background">#00000000</item>
        <!--标题栏的高度-->
        <item name="title_bar_height">48dp</item>
        <item name="colorPrimary">@color/color_main_color</item>
    </style>


    <style name="Custom.RatingBar.Indicator" parent="AppTheme">
        <item name="android:progressDrawable">@drawable/shape_ratingbar</item>
        <item name="android:indeterminateDrawable">@drawable/shape_ratingbar</item>
        <item name="android:minHeight">16dip</item>
        <item name="android:maxHeight">16dip</item>
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ListPopupWindowStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/base_popup_top_in</item>
        <item name="android:windowExitAnimation">@anim/base_popup_top_out</item>
    </style>


</resources>
